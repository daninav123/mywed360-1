{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "mywed360",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
  "scripts": {
        "postinstall": "npm --prefix backend install",
        "start": "node backend/index.js",
        "backend:ci": "node backend/index.js",
        "frontend:ci": "vite --host --port 5173 --strictPort",
        "start:ci": "concurrently -k -n backend,frontend -c blue,magenta \"npm:backend:ci\" \"npm:frontend:ci\"",
        "dev": "vite --host --port 5173 --strictPort",
        "build": "vite build",
        "preview": "vite preview --host --port 5173 --strictPort",
        "monitor": "powershell -ExecutionPolicy Bypass -File ./scripts/monitor-5173.ps1 -AutoFix",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "test": "vitest run",
        "test:run": "vitest run",
        "test:unit": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:coverage:html": "vitest run --coverage --reporter html",
        "test:email-coverage": "node scripts/email-coverage-report.js",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "cypress:run:seating": "cypress run --spec \"cypress/e2e/seating/**/*.cy.js\" --config video=false",
        "cypress:open:seating": "cypress open --e2e --config specPattern=cypress/e2e/seating/**/*.cy.js",
        "cypress:cache:clear:win": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"$p=Join-Path $env:LOCALAPPDATA 'Cypress/Cache'; if(Test-Path $p){ Remove-Item -Recurse -Force $p }; Write-Host 'Cypress cache cleared'\"",
        "cypress:install": "cypress install",
        "e2e": "start-server-and-test dev http://localhost:5173 cypress:run",
        "e2e:ci": "start-server-and-test start:ci http://localhost:5173 cypress:run",
        "e2e:open": "start-server-and-test dev http://localhost:5173 cypress:open",
        "e2e:seating": "start-server-and-test dev http://localhost:5173 cypress:run:seating",
        "ensure:finance": "node scripts/ensureFinanceAll.js",
        "validate:schemas": "node scripts/validateSchemas.js",
        "validate:i18n": "node scripts/validateI18n.js",
        "nightly": "node scripts/nightlyRunner.js --durationHours=8 --sleepSeconds=180 --stopOnError=false --pushBranch=windows",
        "backfill:mails": "node backend/scripts/backfillMailsToUsers.js --limit=1000",
        "fix:mails:from": "node backend/scripts/fixMailFrom.js",
        "check:bundle": "node scripts/bundleBudget.js --maxBytes=2000000",
        "format": "prettier --write .",
        "prepare": "husky install"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^7.3.2",
        "@mui/material": "^7.1.2",
        "@mui/utils": "^7.1.1",
        "express-rate-limit": "^7.3.1",
        "helmet": "^7.1.0",
        "@mui/x-date-pickers": "^8.5.3",
        "@myno_21/pinterest-scraper": "^1.0.4",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "canvas": "^3.2.0",
        "chart.js": "^4.5.0",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dompurify": "^3.2.6",
        "dotenv": "^17.2.0",
        "file-saver": "^2.0.5",
        "firebase": "^10.6.0",
        "firebase-admin": "^13.4.0",
        "firebase-tools": "^14.8.0",
        "form-data": "^4.0.4",
        "framer-motion": "^10.12.16",
        "gantt-task-react": "^0.3.9",
        "handlebars": "^4.7.8",
        "html-to-image": "^1.11.13",
        "html2canvas": "^1.4.1",
        "i18next": "^25.4.1",
        "i18next-browser-languagedetector": "^8.2.0",
        "i18next-http-backend": "^3.0.2",
        "imagetracerjs": "^1.2.6",
        "jspdf": "^3.0.1",
        "jszip": "^3.10.1",
        "lucide-react": "^0.268.0",
        "mailgun-js": "^0.22.0",
        "mailgun.js": "^12.0.3",
        "mywed360": "file:",
        "nodemailer": "^6.9.15",
        "openai": "^4.104.0",
        "pdfkit": "^0.17.1",
        "potrace": "^2.1.8",
        "react": "18.2.0",
        "react-beautiful-dnd": "^13.1.1",
        "react-big-calendar": "^1.19.4",
        "react-calendar": "^6.0.0",
        "react-chartjs-2": "^5.3.0",
        "react-dnd": "^16.0.1",
        "react-dnd-html5-backend": "^16.0.1",
        "react-dnd-touch-backend": "^16.0.1",
        "react-dom": "18.2.0",
        "react-i18next": "^15.7.2",
        "react-icons": "^5.5.0",
        "react-router-dom": "^6.30.1",
        "react-tiff": "^0.0.14",
        "react-toastify": "^11.0.5",
        "react-window": "^1.8.11",
        "recharts": "^2.15.3",
        "rss-parser": "^3.13.0",
        "sharp": "^0.34.3",
        "svg-to-pdfkit": "^0.1.8",
        "twilio": "^4.22.0",
        "zod": "^3.23.8",
        "web-vitals": "^4.2.3"
    },
    "overrides": {
        "esbuild": "0.18.20",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@babel/core": "7.24.7",
        "@firebase/rules-unit-testing": "^3.0.0",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@vitejs/plugin-react": "^4.5.2",
        "@vitest/coverage-istanbul": "^0.34.6",
        "@vitest/coverage-v8": "^0.34.6",
        "autoprefixer": "^10.4.21",
        "axe-core": "^4.10.3",
        "concurrently": "^8.2.2",
        "cypress": "^13.17.0",
        "cypress-file-upload": "^5.0.8",
        "eslint": "^8.57.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-vitest": "^0.5.4",
        "fast-glob": "^3.3.3",
        "jest-axe": "^10.0.0",
        "jsdom": "^26.1.0",
        "postcss": "^8.5.6",
        "start-server-and-test": "^2.0.1",
        "sucrase": "^3.34.0",
        "supertest": "^6.3.3",
        "tailwindcss": "^3.4.17",
        "vite": "^4.5.14",
        "vite-plugin-pwa": "^0.16.7",
        "vitest": "^0.34.6",
        "wait-on": "^8.0.4",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.46.4"
    },
    "lint-staged": {
      "*.{js,jsx,ts,tsx,json,css,md}": [
        "eslint --fix",
        "prettier --write"
      ]
    }
}
