{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "malove-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "postinstall": "node scripts/safe-postinstall.js",
    "backend": "node backend/index.js",
    "dev": "npm run start:ci",
    "dev:main": "cd apps/main-app && npm run dev",
    "dev:suppliers": "cd apps/suppliers-app && npm run dev",
    "dev:planners": "cd apps/planners-app && npm run dev",
    "dev:admin": "cd apps/admin-app && npm run dev",
    "dev:all": "concurrently -k -n backend,main,suppliers,planners,admin -c blue,magenta,yellow,green,red \"npm run backend\" \"npm run dev:main\" \"npm run dev:suppliers\" \"npm run dev:planners\" \"npm run dev:admin\"",
    "install:all": "npm install && cd apps/main-app && npm install && cd ../suppliers-app && npm install && cd ../planners-app && npm install && cd ../admin-app && npm install && cd ../..",
    "build": "npm run build:main",
    "build:main": "cd apps/main-app && npm run build",
    "build:suppliers": "cd apps/suppliers-app && npm run build",
    "build:planners": "cd apps/planners-app && npm run build",
    "build:admin": "cd apps/admin-app && npm run build",
    "build:all": "npm run build:main && npm run build:suppliers && npm run build:planners && npm run build:admin",
    "monitor": "powershell -ExecutionPolicy Bypass -File ./scripts/monitor-5173.ps1 -AutoFix",
    "lint": "eslint \"apps/*/src/**/*.{js,jsx,ts,tsx}\" \"backend/**/*.js\" --max-warnings 0 --ignore-pattern \"backend/node_modules/**\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:rules": "vitest run tests/firestore.rules.test.js",
    "test:rules:emulator": "node scripts/test-with-emulator.js",
    "test:rules:all": "FIRESTORE_RULES_TESTS=true vitest run apps/main-app/src/__tests__/firestore.rules",
    "test:coverage:html": "vitest run --coverage --reporter html",
    "test:email-coverage": "node scripts/email-coverage-report.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:test": "cross-env VITE_TEST_MODE=true cypress run",
    "cypress:run:single": "cross-env VITE_TEST_MODE=true cypress run --spec",
    "cypress:run:seating": "cypress run --spec \"cypress/e2e/seating/**/*.cy.js\" --config video=false",
    "cypress:run:proveedores": "cypress run --spec \"cypress/e2e/proveedores_*.cy.js\" --config video=false",
    "cypress:run:portfolio": "cypress run --spec \"cypress/e2e/portfolio-proveedores/**/*.cy.js\" --config video=false",
    "cypress:open:portfolio": "cypress open --e2e --config specPattern=cypress/e2e/portfolio-proveedores/**/*.cy.js",
    "cypress:run:ai-search": "cypress run --spec \"cypress/e2e/ai-supplier-search.cy.js\" --browser chrome --headed",
    "cypress:run:tarjetas": "cypress run --spec \"cypress/e2e/wedding-services/tarjetas-servicios.cy.js\" --browser chrome --headed",
    "cypress:open:tarjetas": "cypress open --e2e --config specPattern=cypress/e2e/wedding-services/**/*.cy.js",
    "cypress:open:seating": "cypress open --e2e --config specPattern=cypress/e2e/seating/**/*.cy.js",
    "cypress:run:quotes": "cypress run --spec \"cypress/e2e/quote-system/**/*.cy.js\" --browser chrome",
    "cypress:run:quotes:headed": "cypress run --spec \"cypress/e2e/quote-system/**/*.cy.js\" --browser chrome --headed",
    "cypress:open:quotes": "cypress open --e2e --config specPattern=cypress/e2e/quote-system/**/*.cy.js",
    "cypress:run:i18n": "cypress run --spec \"cypress/e2e/i18n/**/*.cy.js\" --browser chrome",
    "cypress:run:i18n:headed": "cypress run --spec \"cypress/e2e/i18n/**/*.cy.js\" --browser chrome --headed",
    "cypress:open:i18n": "cypress open --e2e --config specPattern=cypress/e2e/i18n/**/*.cy.js",
    "test:quotes": "npm run cypress:run:quotes",
    "test:e2e:i18n": "npm run cypress:run:i18n",
    "test:ai-search": "node scripts/testAISearchE2E.js",
    "cypress:cache:clear:win": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"$p=Join-Path $env:LOCALAPPDATA 'Cypress/Cache'; if(Test-Path $p){ Remove-Item -Recurse -Force $p }; Write-Host 'Cypress cache cleared'\"",
    "cypress:install": "cypress install",
    "start:ci": "concurrently -k -n backend,frontend -c blue,magenta \"npm run backend\" \"npm run dev:main\"",
    "e2e": "concurrently -k -n dev,tests -c blue,magenta \"npm run dev\" \"npm run e2e:wait\"",
    "e2e:ci": "concurrently -k -n servers,tests -c blue,magenta \"npm run start:ci\" \"npm run e2e:wait\"",
    "e2e:wait": "wait-on http://localhost:5173 && npm run cypress:run",
    "e2e:with-seeds": "node scripts/seedAllForTests.js && npm run e2e",
    "e2e:open": "start-server-and-test dev http://localhost:5173 cypress:open",
    "e2e:seating": "start-server-and-test dev http://localhost:5173 cypress:run:seating",
    "seed:all": "node scripts/seedAllForTests.js",
    "sync:categories": "node scripts/syncCategoriesToFirestore.js",
    "ensure:finance": "node scripts/ensureFinanceAll.js",
    "validate:schemas": "node scripts/validateSchemas.js",
    "validate:i18n": "node scripts/validateI18n.js",
    "validate:roadmap": "node scripts/aggregateRoadmap.js && node scripts/debugSpecDiff.js && node scripts/roadmapCrossCheck.js",
    "workflows:validate": "node scripts/run-with-watch.js --timeout=60 --idle=30 -- node scripts/validateWorkflows.js",
    "workflows:check": "node scripts/run-with-watch.js --timeout=300 --idle=60 -- node scripts/checkWorkflows.js",
    "diagnostic:email": "node scripts/diagnosticEmail.js",
    "test:webhook": "node scripts/testMailgunWebhook.js",
    "test:ai-suppliers": "node scripts/testAISuppliers.js",
    "ngrok:setup": "node scripts/setupNgrok.js",
    "nightly": "node scripts/nightlyRunner.js --durationHours=8 --sleepSeconds=180 --stopOnError=false --pushBranch=windows",
    "backfill:mails": "node backend/scripts/backfillMailsToUsers.js --limit=1000",
    "fix:mails:from": "node backend/scripts/fixMailFrom.js",
    "check:bundle": "node scripts/bundleBudget.js --maxBytes=2000000",
    "format": "prettier --write .",
    "prepare": "husky install",
    "i18n:update": "node scripts/update_i18n_full.js && node scripts/fix-mojibake.js && node scripts/validateI18n.js",
    "i18n:sync": "node scripts/syncLocales.js es",
    "i18n:repair": "node scripts/repairI18nJSON.js",
    "i18n:fix-encoding": "node scripts/fixI18nEncoding.js",
    "i18n:sync-translations": "node scripts/syncTranslations.js",
    "i18n:fix-all": "node scripts/repairI18nJSON.js && node scripts/syncTranslations.js && node scripts/validateI18n.js",
    "fix:mojibake": "node scripts/fix-mojibake.js",
    "docs:fix-encoding": "node scripts/fix-mojibake.js",
    "ci:check": "npm run lint && npm run test:unit && npm run validate:i18n && npm run check:bundle && npm run validate:roadmap",
    "issues:create": "node scripts/gh-create-issues.js",
    "issues:dry": "cross-env DRY_RUN=1 node scripts/gh-create-issues.js",
    "roadmap:aggregate": "node scripts/aggregateRoadmap.js",
    "roadmap:check": "node scripts/aggregateRoadmap.js && node scripts/roadmapOrder.js --check",
    "roadmap:order": "node scripts/roadmapOrder.js",
    "roadmap:diff": "node scripts/roadmapCrossCheck.js",
    "seed:personalization": "node scripts/seedPersonalizationProfiles.js",
    "metrics:cleanup": "node scripts/cleanupProjectMetricsEvents.js --days=30",
    "cleanup:bak": "node scripts/cleanup-bak-files.js",
    "cleanup:bak:dry": "node scripts/cleanup-bak-files.js --dry-run",
    "security:xss": "node scripts/check-xss-vulnerabilities.js",
    "mobile:start": "npm --prefix mobile run start",
    "mobile:start:clean": "npm --prefix mobile run start:clean",
    "mobile:android": "npm --prefix mobile run android",
    "mobile:ios": "npm --prefix mobile run ios",
    "mobile:lint": "npm --prefix mobile run lint"
  },
  "dependencies": {
    "@mui/icons-material": "^7.3.4",
    "@mui/utils": "^7.1.1",
    "@myno_21/pinterest-scraper": "^1.0.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express-rate-limit": "^7.3.1",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.4.0",
    "form-data": "^4.0.4",
    "framer-motion": "^10.16.4",
    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "i18next": "^25.4.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "imagetracerjs": "^1.2.6",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.268.0",
    "mailgun.js": "^12.0.3",
    "nodemailer": "^7.0.12",
    "openai": "^6.15.0",
    "potrace": "^2.1.1",
    "qrcode": "^1.5.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.7.2",
    "react-icons": "^5.5.0",
    "react-joyride": "^2.9.3",
    "react-router-dom": "^6.30.1",
    "react-tiff": "^0.0.14",
    "react-toastify": "^11.0.5",
    "rss-parser": "^3.13.0",
    "stripe": "^19.1.0",
    "twilio": "^4.22.0",
    "web-vitals": "^4.2.3",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "overrides": {
    "esbuild": "0.18.20",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "concurrently": "^8.2.2",
    "cypress": "^13.17.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-vitest": "^0.5.4",
    "fast-glob": "^3.3.3",
    "firebase-functions-test": "^3.0.0",
    "firebase-tools": "^14.8.0",
    "husky": "^9.1.6",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.10",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "puppeteer": "^24.29.1",
    "sharp": "^0.34.3",
    "start-server-and-test": "^2.0.1",
    "sucrase": "^3.34.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "wait-on": "^8.0.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.46.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
