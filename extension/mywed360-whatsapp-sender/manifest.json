{
  "name": "MaLove.App WhatsApp Sender",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Envía mensajes de WhatsApp a múltiples invitados en una sola acción desde WhatsApp Web.",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://localhost/*",
    "https://localhost/*",
    "http://187.33.157.13/*",
    "https://mywed360.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "https://localhost/*", "http://187.33.157.13/*", "https://mywed360.com/*"],
      "js": ["contentScriptHost.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["contentScriptWA.js"],
      "run_at": "document_idle"
    }
  ]
}
