{
  "version": 2,
  "buildCommand": "cd apps/main-app && npm run build",
  "outputDirectory": "apps/main-app/dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "cd apps/main-app && npm run dev",
  "nodeVersion": "20.x",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
